{% extends 'base.html.twig' %}


{% block title %}
    Agence
{% endblock %}

{% block body %}
    <div class="jumbotron jumbotron-fluide">
        <div class="container">
            {{form_start(formSearch)}}
            <div class="form-row">
                <div class="col">{{ form_row(formSearch.minSurface) }}</div>
                <div class="col">{{ form_row(formSearch.maxPrice) }}</div>
                <div class="col">{{ form_row(formSearch.infoOptions) }}</div>
                <div class="col">
                    <button class="btn btn-primary">Rechercher ...</button>
                </div>
            </div>

            {{form_end(formSearch)}}
        </div>
    </div>


    <div
        class="container">

        {# total items count #}
        <div class="count">
            Total:
            {{ properties.getTotalItemCount }}
            Biens

        </div>

        <div class="row mb-4">
            {% for property in properties %}

                {% include 'property/_property.html.twig' %}
            {% endfor %}
        </div>
        {# display navigation #}
        <div class="navigation">
            {{ knp_pagination_render(properties) }}
        </div>

    </div>
{% endblock %}
